package ua.nure.cs.chebanenko.usermanagement171.db;

import ua.nure.cs.chebanenko.usermanagement171.domain.User;

public class DaoFactroryImpl extends DaoFactory {

    @Override
    public Dao<User> getUserDao() {
        Dao<User> resust;
        try {
            Class<?> clazz = Class.forName((properties.getProperty("dao.UserDao")));
            resust = (Dao<User>) clazz.newInstance();
            resust.setConnectionFactory(getConnectionFactory());
        } catch (Exception e) {
            throw new RuntimeException(e);
        }
        return resust;
    }
}